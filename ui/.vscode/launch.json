    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/out/test/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "npm"
        }
    ]
}
