{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build+Watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build:esm",
                "--",
                "--watch",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "presentation": {
                "revealProblems": "onProblem"
            },
            "problemMatcher": "$tsc-watch"
        }
    ]
}
