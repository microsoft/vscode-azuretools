{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Tests",
            "type": "extensionHost",
            "request": "launch",
            "testConfiguration": "${workspaceFolder}/.vscode-test.mjs",
            "env": {
                "DEBUGTELEMETRY": "v",
            },
            "outFiles": [
                "${workspaceFolder}/src/**/*.{ts,mts,cts}",
                "${workspaceFolder}/test/**/*.{ts,mts,cts}", // We are using TSX so out files *are* the source files
            ],
        },
    ]
}
